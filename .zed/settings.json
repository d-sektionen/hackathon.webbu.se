{
  "project_name": "hackathon.webbu.se",
  "languages": {
    "Python": {
      "tab_size": 4,
    },
    "TypeScript": {
      "use_on_type_format": false, // https://github.com/zed-industries/zed/issues/43752#issuecomment-3644437401
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true,
      },
    },
    "TSX": {
      "use_on_type_format": false, // https://github.com/zed-industries/zed/issues/43752#issuecomment-3644437401
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true,
      },
    },
  },
  "lsp": {
    "css-variables": {
      "settings": {
        "cssVariables": {
          "lookupFiles": ["**/*.css", "nextjs/node_modules/tailvars/index.css"],
        },
      },
    },
  },
  "tab_size": 2,
}
